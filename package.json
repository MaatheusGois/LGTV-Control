{
  "name": "lgtv-controler",
  "version": "1.0.0",
  "description": "A minimal Electron application",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "nodemon": "nodemon -e js,json,html nodemon.js",
    "pack": "electron-builder --dir",
    "dist-linux": "electron-builder -l",
    "dist-windows": "electron-builder -w",
    "dist-mac": "electron-builder -m",
    "sign": "gulp selfsign"
  },
  "build": {
    "appId": "maatheusgois.lgtv.remote.control",
    "mac": {
      "category": "maatheusgois.lgtv.remote.control",
      "icon": "icon.png"
    },
    "nsis": {
      "perMachine": true
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "repository": "",
  "keywords": [
    "electron",
    "lgtv",
    "remote control",
    "demo"
  ],
  "dependencies": {
    "async": "^3.2.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "events": "^3.1.0",
    "exeq": "^3.0.0",
    "express": "^4.17.1",
    "fs": "0.0.1-security",
    "gulp": "^4.0.2",
    "helmet": "^3.22.0",
    "lgtv": "^0.2.4",
    "mkdirp": "^1.0.4",
    "path": "^0.12.7",
    "persist-path": "^1.0.2",
    "pm2": "^4.4.0",
    "util": "^0.12.2",
    "websocket": "^1.0.31"
  },
  "author": "GitHub",
  "license": "MIT",
  "devDependencies": {
    "electron": "^8.2.4",
    "electron-builder": "^22.6.0",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1"
  }
}
